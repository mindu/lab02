<h1>Lista de Alunos</h1>

<table border="0" cellpadding="2" cellspacing="0" width="700" align="center">
  <tr>
    <td colspan="6" align="right"><%= link_to 'Cadastrar Novo Aluno', new_aluno_path %></td>
  </tr>
  <tr>
    <td colspan="6">&nbsp;</td>
  </tr>
  <tr style="background-color: #D1DFEF">
    <th>Ra</th>
    <th>Nome</th>
    <th>Nivel</th>
    <th colspan="3">Opções</th>
  </tr>

<%
  count = 0
  for aluno in @alunos
%>
  <tr <%= (count % 2 == 0) ? '' : 'style="background-color:#F5F5F5"' %>>
    <td width="5%"><%=h aluno.ra %></td>
    <td width="45%"><%=h aluno.nome %></td>
    <td width="20%"><%=h aluno.nivel %></td>
    <td width="10%"><%= link_to 'Detalhes', aluno, :target => '_blank' %></td>
    <td width="10%"><%= link_to 'Alterar', edit_aluno_path(aluno) %></td>
    <td width="10%"><%= link_to 'Excluir', aluno, :confirm => 'Tem certeza que deseja realmente excluir ?', :method => :delete, :style => 'color: red;' %></td>
  </tr>
<%
  count += 1
end
%>
  <tr>
    <td colspan="6" align="center">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="6" align="center" style="background-color: #F1EEE4"><%= will_paginate @alunos,  options = { :prev_label => "anterior", :next_label => "próximo"} %></td>
  </tr>
  <tr>
    <td colspan="6" align="right"><%= link_to 'Cadastrar Novo Aluno', new_aluno_path %></td>
  </tr>
</table>

<br />


