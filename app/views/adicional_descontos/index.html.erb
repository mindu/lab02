<h1>Lista de Adicional e Desconto</h1>

<table border="0" cellpadding="2" cellspacing="0" width="700" align="center">
  <tr>
    <td colspan="8" align="right"><%= link_to 'Cadastrar Novo Adicional ou Desconto', new_adicional_desconto_path %></td>
  </tr>
  <tr>
    <td colspan="8">&nbsp;</td>
  </tr>
  <tr style="background-color: #D1DFEF">
    <th>Tipo</th>
    <th>Data Vigor</th>
    <th>Valor</th>
    <th>Aluno</th>
    <th>Descrição</th
    <th colspan="3">Opções</th>
  </tr>

<%
  count = 0
  for adicional_desconto in @adicional_descontos
%>
  <tr <%= (count % 2 == 0) ? '' : 'style="background-color:#F5F5F5"' %>>
    <td><%=h adicional_desconto.adicional_desconto_tipo.tipo %></td>
    <td><%=h adicional_desconto.data_vigor.strftime("%d/%m/%Y") %></td>
    <td>R$ <%=h adicional_desconto.valor.real %></td>
    <td><%=h adicional_desconto.aluno.nome %></td>
    <td><%=h adicional_desconto.descricao %></td>

    <td><%= link_to 'Detalhes', adicional_desconto %></td>
    <td><%= link_to 'Alterar', edit_adicional_desconto_path(adicional_desconto) %></td>
    <td><%= link_to 'Excluir', adicional_desconto, :confirm => 'Tem certeza que deseja realmente excluir ?', :method => :delete, :style => 'color: red;' %></td>
  </tr>
<%
  count += 1
end
%>
  <tr>
    <td colspan="8">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="8" align="right"><%= link_to 'Cadastrar Novo Adicional ou Desconto', new_adicional_desconto_path %></td>
  </tr>
</table>

<br />
