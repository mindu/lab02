<h1>Lista de Mensalidades</h1>

<table border="0" cellpadding="2" cellspacing="0" width="700" align="center">
  <tr>
    <td colspan="6" align="right"><%= link_to 'Cadastrar Nova Mensalidade', new_mensalidade_path %></td>
  </tr>
  <tr>
    <td colspan="6">&nbsp;</td>
  </tr>
  <tr style="background-color: #D1DFEF">
    <th>Data Vigor</th>
    <th>Valor</th>
    <th>Período</th>
    <th colspan="3">Opções</th>
  </tr>

<%
  count = 0
  for mensalidade in @mensalidades
%>
  <tr <%= (count % 2 == 0) ? '' : 'style="background-color:#F5F5F5"' %>>
    <td width="20%"><%=h mensalidade.data_vigor.strftime("%d/%m/%Y") %></td>
    <td width="20%">R$ <%=h mensalidade.valor.real %></td>
    <td width="30%"><%=h  mensalidade.periodo.periodo %></td>
    <td width="10%"><%= link_to 'Detalhes', mensalidade %></td>
    <td width="10%"><%= link_to 'Alterar', edit_mensalidade_path(mensalidade) %></td>
    <td width="10%"><%= link_to 'Excluir', mensalidade, :confirm => 'Tem certeza que deseja realmente excluir ?', :method => :delete, :style => 'color: red;' %></td>
  </tr>
<%
  count += 1
end
%>
  <tr>
    <td colspan="6">&nbsp;</td>
  </tr>
  <tr>
    <td colspan="6" align="right"><%= link_to 'Cadastrar Nova Mensalidade', new_mensalidade_path %></td>
  </tr>
</table>

<br />
